    "def check_palindrome(s):\n",
    "    clean_s = \"\".join(char for char in s if char.isalnum()).lower()\n",
    "\n",
    "    return clean_s == clean_s[::-1]\n",
    "\n",
    "print(check_palindrome(\"Abba\"))\n",
    "print(check_palindrome(\"Rinoceronte\"))"
   ]
